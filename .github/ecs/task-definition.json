{
  "family": "brev-ly-ecs-task-definition",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::842676008268:role/brev-ly-ecs-task-execution-role",
  "containerDefinitions": [
    {
      "name": "brev-ly-ecs-task-definition",
      "image": "ghcr.io/gabrielmatsan/brev-ly:latest",
      "repositoryCredentials": {
        "credentialsParameter": "arn:aws:secretsmanager:us-east-1:842676008268:secret:github-credentials-qIZgTy"
      },
      "cpu": 512,
      "memory": 1024,
      "memoryReservation": 1024,
      "portMappings": [
        {
          "name": "brev-ly-8080-tcp",
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "essential": true,
      "stopTimeout": 30,
      "environment": [],
      "mountPoints": [],
      "volumesFrom": [],
      "systemControls": [],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/brev-ly-ecs-task-definition",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "volumes": [],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Name",
      "value": "brev-ly-ecs-task-definition"
    },
    {
      "key": "Service",
      "value": "api"
    }
  ]
}